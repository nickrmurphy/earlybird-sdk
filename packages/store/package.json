{
  "name": "@earlybird-sdk/store",
  "version": "0.0.0",
  "type": "module",
  "description": "CRDT store with schema system and conflict resolution for Earlybird SDK",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    }
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsc",
    "test": "bun test",
    "test:watch": "bun test --watch",
    "test:coverage": "bun test --coverage",
    "typecheck": "tsc --noEmit"
  },
  "peerDependencies": {
    "@earlybird-sdk/storage": "workspace:*",
    "@standard-schema/spec": "^1.0.0"
  },
  "devDependencies": {
    "@earlybird-sdk/storage": "workspace:*",
    "@types/bun": "latest",
    "typescript": "^5.0.0",
    "zod": "^3.22.0"
  },
  "keywords": [
    "crdt",
    "store",
    "schema",
    "local-first",
    "conflict-resolution"
  ],
  "author": "Earlybird SDK Team",
  "license": "MIT"
