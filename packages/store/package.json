{
	"name": "@byearlybird/store",
	"version": "0.0.1",
	"description": "Local-first data storage SDK for TypeScript",
	"type": "module",
	"main": "./dist/index.js",
	"module": "./index.ts",
	"types": "./dist/index.d.ts",
	"exports": {
		".": {
			"development": "./index.ts",
			"import": "./dist/index.js",
			"types": "./dist/index.d.ts"
		},
		"./capacitor-adapter": {
			"development": "./storage/capacitor-adapter.ts",
			"import": "./dist/capacitor-adapter.js",
			"types": "./dist/capacitor-adapter.d.ts"
		},
		"./memory-adapter": {
			"development": "./storage/memory-adapter.ts",
			"import": "./dist/memory-adapter.js",
			"types": "./dist/memory-adapter.d.ts"
		},
		"./node-adapter": {
			"development": "./storage/node-adapter.ts",
			"import": "./dist/node-adapter.js",
			"types": "./dist/node-adapter.d.ts"
		}
	},
	"files": ["dist"],
	"keywords": ["storage", "typescript", "cross-platform", "sdk"],
	"license": "MIT",
	"scripts": {
		"build": "vite build",
		"test": "vitest",
		"test:coverage": "vitest run --coverage",
		"bench": "vitest bench"
	},
	"devDependencies": {
		"@types/node": "^24.0.0",
		"@vitest/coverage-v8": "^3.2.3",
		"vite": "^6.3.5",
		"vite-plugin-dts": "^4.5.4"
	}
}
