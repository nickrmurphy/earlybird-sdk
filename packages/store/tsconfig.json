{
	"compilerOptions": {
		"target": "ES2022",
		"module": "ESNext",
		"moduleResolution": "bundler",
		"allowImportingTsExtensions": true,
		"noEmit": true,
		
		// Path mapping for cleaner imports
		"baseUrl": ".",
		"paths": {
			"@/*": ["./src/*"]
		},
		
		"strict": true,
		"skipLibCheck": true,
		"types": ["bun-types"]
	},
	"include": ["src/**/*", "tests/**/*"],
	"exclude": ["node_modules", "dist"]
}
